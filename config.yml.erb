defaults: &defaults
  email:
    from: 'hello@tinysearobots.com'
  sendgrid:
    username: <%= ENV['SENDGRID_USERNAME'] %>
    key: <%= ENV['SENDGRID_KEY'] %>
  session:
    secret: <%= ENV['SESSION_SECRET'] %>

development:
  <<: *defaults
  database:
    url: <%= ENV['DATABASE_URL'] %>
  port: 5000
  redis:
    url: <%= ENV['REDIS_URL'] %>
  streamer:
    url: 'http://localhost:5002'

test:
  <<: *defaults

production:
  <<: *defaults
  database:
    url: <%= ENV['DATABASE_URL'] %>
  redis:
    url: <%= ENV['REDISTOGO_URL'] %>
  streamer:
    url: 'http://streamer.tinyseabots.com'
